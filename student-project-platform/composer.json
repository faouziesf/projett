{
    "name": "student-projects/platform",
    "description": "Plateforme de Suivi des Projets Ã‰tudiants - PHP & SQLite",
    "type": "project",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Votre Nom",
            "email": "votre.email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "vlucas/phpdotenv": "^5.4",
        "respect/validation": "^2.2",
        "monolog/monolog": "^3.0",
        "phpmailer/phpmailer": "^6.6",
        "intervention/image": "^2.7",
        "ramsey/uuid": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Controllers\\": "src/Controllers/",
            "App\\Models\\": "src/Models/",
            "App\\Services\\": "src/Services/",
            "App\\Utils\\": "src/Utils/"
        },
        "files": [
            "includes/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\"",
            "php init_db.php"
        ],
        "post-update-cmd": [
            "php init_db.php"
        ],
        "test": "phpunit",
        "cs": "phpcs",
        "stan": "phpstan analyse src --level=5",
        "serve": "php -S localhost:8000",
        "setup": [
            "@composer install",
            "php setup.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}